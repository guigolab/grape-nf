#!/bin/bash
set -e
set -u

mkdir genomeDir
sed 's/ .*//' ${genome} > genome_processed.fa
gemtools index -i genome_processed.fa \
							 -t ${cpus} \
							 -o genomeDir/genome_index.gem
gemtools t-index -i genomeDir/genome_index.gem \
								 -a ${annotation} \
								 -t ${cpus} \
								 -o genomeDir/transcript_index \
								 -m ${readLength}
rm genome_processed.fa