nextflow_process {

    name "Test Process quantify"
    script "modules/quantification/rsem/main.nf"
    process "quantify"

    tag "module"

    setup {
        run("index") {
            script "modules/quantification/rsem/main.nf"
            process {
                """
                input[0] = file("${baseDir}/data/genome.fa.gz")
                input[1] = file("${baseDir}/data/annotation.gtf.gz")
                """
            }
        }
    }

    test("Should quantify with RSEM") {

        when {
            process {
                """
                input[0] = index.out
                input[1] = Channel.from([
                    [ "sample3", "test3", file("${baseDir}/data/sample3_m4_n10_toTranscriptome.bam"), "bam", "TranscriptomeAlignments", true, "MATE2_SENSE" ]
                ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("Should quantify with RSEM (with credibility intervals)") {

        when {
            params {
                rsemCalcCI = true
            }
            process {
                """
                input[0] = index.out
                input[1] = Channel.from([
                    [ "sample3", "test3", file("${baseDir}/data/sample3_m4_n10_toTranscriptome.bam"), "bam", "TranscriptomeAlignments", true, "MATE2_SENSE" ]
                ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
