nextflow_process {

    name "Test Process index"
    script "modules/quantification/rsem/main.nf"
    process "index"

    tag "module"

    test("Should create index for RSEM quantification (uncompressed references)") {

        when {
            process {
                """
                input[0] = file("${baseDir}/data/genome.fa")
                input[1] = file("${baseDir}/data/annotation.gtf")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("Should create index for RSEM quantification (compressed references)") {

        when {
            process {
                """
                input[0] = file("${baseDir}/data/genome.fa.gz")
                input[1] = file("${baseDir}/data/annotation.gtf.gz")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
