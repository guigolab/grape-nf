nextflow_process {

    name "Test Process inferExp"
    script "modules/inferExp/rseqc/main.nf"
    process "inferExp"

    tag "module"

    setup {
        run("gtfToGenePred") {
            script "modules/inferExp/rseqc/main.nf"
            process {
                """
                input[0] = file("${baseDir}/data/annotation.gtf.gz")
                """
            }
        }
        run("genePredToBed") {
            script "modules/inferExp/rseqc/main.nf"
            process {
                """
                input[0] = gtfToGenePred.out
                """
            }
        }
    }

    test("Should infer strandedness from BAM (compressed annotation)") {

        when {
            process {
                """
                input[0] = genePredToBed.out
                input[1] = Channel.from([
                    [ "sample3", "test3", file("${baseDir}/data/sample3_m4_n10_toGenome.bam"), "bam", "GenomeAlignments", true]
                ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("Should infer strandedness from BAM (uncompressed annotation)") {

        when {
            process {
                """
                input[0] = genePredToBed.out
                input[1] = Channel.from([
                    [ "sample3", "test3", file("${baseDir}/data/sample3_m4_n10_toGenome.bam"), "bam", "GenomeAlignments", true]
                ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
